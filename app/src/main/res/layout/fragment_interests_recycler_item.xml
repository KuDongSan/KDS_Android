<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="@color/white"
                                                   android:paddingStart="17dp"
                                                   android:paddingTop="15dp"
                                                   android:paddingEnd="17dp"
                                                   android:paddingBottom="1dp">

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fragment_interests_sales_type_button"
            android:layout_width="48dp"
            android:layout_height="23dp"
            android:background="@drawable/assets_sales_type_button"
            android:elevation="0dp"
            android:fontFamily="@font/roboto_bold"
            android:text="전세"
            android:textColor="@color/white"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fragment_interests_service_type_button"
            android:layout_width="48dp"
            android:layout_height="23dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/assets_service_type_button"
            android:elevation="0dp"
            android:fontFamily="@font/roboto_bold"
            android:text="오피스텔"
            android:textColor="#808080"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/fragment_interests_sales_type_button"
            app:layout_constraintStart_toEndOf="@id/fragment_interests_sales_type_button"
            app:layout_constraintTop_toTopOf="@id/fragment_interests_sales_type_button"/>

    <TextView
            android:id="@+id/fragment_interests_price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_bold"
            android:text="3억"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@id/fragment_interests_sales_type_button"
            app:layout_constraintTop_toBottomOf="@id/fragment_interests_sales_type_button"/>

    <TextView
            android:id="@+id/fragment_interests_area_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto_regular"
            android:text="44.55㎡"
            android:textColor="#808080"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/fragment_interests_price_text_view"
            app:layout_constraintTop_toBottomOf="@id/fragment_interests_price_text_view"/>

    <TextView
            android:id="@+id/fragment_interests_manage_cost_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:text="관리비 협의"
            android:layout_marginStart="10dp"
            android:textColor="#808080"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@id/fragment_interests_area_text_view"
            app:layout_constraintStart_toEndOf="@id/fragment_interests_area_text_view"
            app:layout_constraintTop_toTopOf="@id/fragment_interests_area_text_view"/>

    <TextView
            android:id="@+id/fragment_interests_address_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/roboto_regular"
            android:text="서울특별시 송파구 방이동"
            android:textColor="#D3D3D3"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/fragment_interests_area_text_view"
            app:layout_constraintTop_toBottomOf="@id/fragment_interests_area_text_view"/>

    <androidx.cardview.widget.CardView
            android:id="@+id/fragment_interests_card_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="50dp"
            android:transitionName="image"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="@id/fragment_interests_address_text_view"
            app:layout_constraintDimensionRatio="1.5:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/fragment_interests_sales_type_button">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fragment_interests_image_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_temp_assets"
                android:transitionName="image"/>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>