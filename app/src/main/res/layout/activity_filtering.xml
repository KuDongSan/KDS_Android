<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".src.main.home.assets.filtering.FilteringActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_filtering_title_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/activity_filtering_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/transparent"
                android:src="@drawable/ic_close"
                android:tint="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/activity_filtering_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="필터"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/activity_filtering_back_button"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/activity_filtering_top_layout_clear_all_text_view"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/activity_filtering_title_text_view"
                app:layout_constraintBottom_toBottomOf="@id/activity_filtering_title_text_view"
                android:layout_width="wrap_content"
                android:text="모두 초기화"
                android:textSize="14sp"
                android:textColor="#808080"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginEnd="15dp"
                android:layout_height="wrap_content" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_filtering_service_type_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/activity_filtering_title_constraint_layout">

        <TextView
                android:id="@+id/activity_filtering_service_type_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="방 종류"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
                android:id="@+id/service_type_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/activity_filtering_service_type_title_text_view">

            <RadioButton
                    android:text="원룸"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/selector_radio_text"
                    android:button="@null"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:id="@+id/radioButton1" />

            <RadioButton
                    android:text="빌라"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/selector_radio_text"
                    android:button="@null"
                    android:layout_margin="5dp"

                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:id="@+id/radioButton2" />

            <RadioButton
                    android:text="오피스텔"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/selector_radio_text"
                    android:button="@null"
                    android:layout_margin="5dp"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:id="@+id/radioButton3" />

        </RadioGroup>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
            android:id="@+id/activity_detail_second_divider"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/border_color_thick"
            android:fitsSystemWindows="true"
            app:layout_constraintTop_toBottomOf="@+id/activity_filtering_service_type_constraint_layout"
            app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_filtering_distance_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/activity_detail_second_divider">

        <TextView
                android:id="@+id/activity_filtering_distance_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="도보 거리"
                android:textColor="@color/black"

                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        <RadioGroup
                android:id="@+id/nearest_distance_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/activity_filtering_distance_title_text_view">

            <RadioButton
                    android:text="5분이내"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/selector_radio_text"
                    android:button="@null"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:id="@+id/radioButton7" />

            <RadioButton
                    android:text="10분이내"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/selector_radio_text"
                    android:button="@null"
                    android:layout_margin="5dp"

                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:id="@+id/radioButton8" />

            <RadioButton
                    android:text="20분이내"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/selector_radio_text"
                    android:button="@null"
                    android:layout_margin="5dp"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:id="@+id/radioButton9" />

            <RadioButton
                    android:text="30분이내"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/selector_radio_text"
                    android:button="@null"
                    android:layout_margin="5dp"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:id="@+id/radioButton10" />

            <RadioButton
                    android:text="상관없음"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/selector_radio_text"
                    android:button="@null"
                    android:layout_margin="5dp"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:id="@+id/radioButton11" />

        </RadioGroup>


    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
            android:id="@+id/activity_filtering_second_divider"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/border_color_thick"
            android:fitsSystemWindows="true"
            app:layout_constraintTop_toBottomOf="@+id/activity_filtering_distance_constraint_layout"
            app:layout_constraintStart_toStartOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_filtering_sales_type_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/activity_filtering_second_divider">

        <TextView
                android:id="@+id/activity_filtering_sales_type_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="거래유형"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
                android:id="@+id/sales_type_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/activity_filtering_sales_type_title_text_view">

            <RadioButton
                    android:text="월세"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/selector_radio_text"
                    android:button="@null"
                    android:textAlignment="center"
                    android:layout_margin="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:id="@+id/radioButton4" />

            <RadioButton
                    android:text="전세"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/selector_radio_text"
                    android:button="@null"
                    android:layout_margin="5dp"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:id="@+id/radioButton5" />

            <RadioButton
                    android:text="매매"
                    android:background="@drawable/radio_selector"
                    android:textColor="@drawable/selector_radio_text"
                    android:button="@null"
                    android:layout_margin="5dp"
                    android:textAlignment="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="25dp"
                    android:id="@+id/radioButton6" />

        </RadioGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
            android:id="@+id/activity_detail_third_divider"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/border_color_thick"
            android:fitsSystemWindows="true"
            app:layout_constraintTop_toBottomOf="@+id/activity_filtering_sales_type_constraint_layout"
            app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_filtering_deposit_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="5dp"
            android:paddingBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/activity_detail_third_divider">


        <TextView
                android:id="@+id/activity_filtering_deposit_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="보증금(전세금)"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/activity_filtering_deposit_value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/main_green_accent"
                android:layout_margin="15dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <com.jaygoo.widget.RangeSeekBar
                android:id="@+id/activity_filtering_deposit_range_seek_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:rsb_gravity="bottom"
                app:rsb_mode="range"
                app:rsb_min="0"
                app:rsb_max="34"
                app:rsb_steps="34"
                app:rsb_step_auto_bonding="true"
                app:rsb_tick_mark_layout_gravity="bottom"
                app:rsb_tick_mark_mode="other"
                app:rsb_tick_mark_text_margin="20dp"
                app:rsb_tick_mark_text_array="@array/view_values"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_filtering_deposit_title_text_view" />

        <TextView
                android:id="@+id/activity_filtering_monthly_rent_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="월세"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_filtering_deposit_range_seek_bar" />

        <TextView
                android:id="@+id/activity_filtering_monthly_rent_value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/main_green_accent"
                android:layout_margin="15dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.6" />

        <com.jaygoo.widget.RangeSeekBar
                android:id="@+id/activity_filtering_monthly_rent_range_seek_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:rsb_gravity="bottom"
                app:rsb_mode="range"
                app:rsb_min="0"
                app:rsb_max="36"
                app:rsb_steps="36"
                app:rsb_step_auto_bonding="true"
                app:rsb_tick_mark_layout_gravity="bottom"
                app:rsb_tick_mark_mode="other"
                app:rsb_tick_mark_text_margin="20dp"
                app:rsb_tick_mark_text_array="@array/view_values"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_filtering_monthly_rent_title_text_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
            android:id="@+id/activity_detail_fourth_divider"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/border_color_thick"
            android:fitsSystemWindows="true"
            app:layout_constraintTop_toBottomOf="@+id/activity_filtering_deposit_constraint_layout"
            app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_filtering_area_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/activity_detail_fourth_divider">

        <TextView
                android:id="@+id/activity_filtering_area_title_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/roboto_bold"
                android:text="방 크기(전용면적)"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <TextView
                android:id="@+id/activity_filtering_area_value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"

                android:textColor="@color/main_green_accent"
                android:layout_margin="15dp"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        <com.jaygoo.widget.RangeSeekBar
                android:id="@+id/activity_filtering_area_range_seek_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"

                app:rsb_gravity="bottom"
                app:rsb_mode="range"
                app:rsb_min="16"
                app:rsb_max="146"
                app:rsb_steps="130"
                app:rsb_step_auto_bonding="true"

                app:rsb_tick_mark_layout_gravity="bottom"
                app:rsb_tick_mark_mode="other"
                app:rsb_tick_mark_text_margin="20dp"
                app:rsb_tick_mark_text_array="@array/view_values"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/activity_filtering_area_title_text_view" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
            android:id="@+id/activity_detail_fifth_divider"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/border_color_thick"
            android:fitsSystemWindows="true"
            app:layout_constraintTop_toBottomOf="@+id/activity_filtering_area_constraint_layout"
            app:layout_constraintStart_toStartOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/activity_detail_like_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/compare_radius"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/activity_detail_fifth_divider">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text="적용하기"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>