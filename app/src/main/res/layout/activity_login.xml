<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_green"
    tools:context=".src.login.LoginActivity">

    <TextView
        android:id="@+id/activity_login_main_text"
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="569dp"
        android:fontFamily="@font/roboto_bold"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="14sp"
        android:text="간편한 쿠동산 다양한 경험"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/activity_login_gif"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/home_animation_unscreen"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/activity_login_kakao_layout"
        android:layout_width="304dp"
        android:layout_height="50dp"
        android:layout_marginTop="400dp"
        android:background="@drawable/social_login_background"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_login_main_text"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/activity_login_kakao_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/logo_kako_login" />

        <TextView
            android:id="@+id/activity_login_kakao_text"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:layout_gravity="center"
            android:textColor="#3A2929"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto_regular"
            android:text="카카오톡으로 1초만에 로그인"
            android:textSize="15sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/activity_login_sign_up_layout"
        android:layout_width="304dp"
        android:layout_height="19dp"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_login_kakao_layout"
        tools:visibility="visible">

        <TextView
            android:layout_width="173dp"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:alpha="0.6"
            android:fontFamily="@font/roboto_regular"
            android:text="아직 회원님이 아니신가요?"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:layout_width="61dp"
            android:layout_height="19dp"
            android:layout_gravity="center"
            android:layout_marginStart="18dp"
            android:fontFamily="@font/roboto_bold"
            android:text="회원가입"
            android:textColor="@color/main_green_accent"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>